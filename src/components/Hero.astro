---
import { Image } from '@astrojs/image/components';
import Button from './Button.astro';
import GridCard from './GridCard.astro';
---

<GridCard padding={false}>
	<main
		class="flex gap-3 sm:gap-6 md:gap-12 items-center flex-row relative min-h-[400px] sm:min-h-[400px] md:min-h-[500px]"
	>
		<div
			class="flex flex-col gap-3 sm:gap-6 md:gap-12 items-start flex-1 p-3 sm:p-6 md:p-12 z-50"
		>
			<h1 class="flex flex-col font-bold text-2xl sm:text-4xl lg:text-5xl">
				<span>Hey, I'm Raymond.</span>
				<span>Full Stack <span class="text-amber-400">Developer</span></span>
				<span>and United States Marine.</span>
			</h1>
			<!-- <a
				href="/"
				class="border py-3 px-6 border-amber-400 text-amber-400 hover:bg-amber-400/10 transition shadow-2xl shadow-amber-400"
			>
				Contact Me</a
			> -->
			<Button />
		</div>

		<Image
			src="/me.png"
			alt="Photo of Raymond Kneipp"
			width={437}
			height={600}
			fit="contain"
			class="absolute top-0 right-0 bottom-0 h-full w-min p-3 sm:p-6 md:p-12 pb-0 sm:pb-0 md:pb-0 sepia brightness-75 opacity-30 sm:opacity-100"
		/>
	</main>
</GridCard>
