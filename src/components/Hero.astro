---
import GridCard from './GridCard.astro';
---

<GridCard padding={false}>
	<main
		class="flex gap-3 sm:gap-6 md:gap-12 items-center flex-row relative min-h-[350px] sm:min-h-[400px] md:min-h-[500px]"
	>
		<div
			class="flex flex-col gap-3 sm:gap-6 md:gap-12 items-start flex-1 p-3 sm:p-6 md:p-12 z-50"
		>
			<h1 class="flex flex-col font-bold text-2xl sm:text-4xl lg:text-5xl">
				<span>Hey, I'm Raymond.</span>
				<span>Full Stack <span class="text-amber-400">Developer</span></span>
				<span>and United States Marine.</span>
			</h1>
			<a
				href="/"
				class="border py-3 px-6 border-amber-400 text-amber-400 hover:bg-amber-400/10 transition"
			>
				Contact Me</a
			>
		</div>

		<img
			src="/me.png"
			width="400px"
			height="550px"
			class="object-contain object-bottom p-12 pb-0 sepia brightness-75 transition-all transform origin-bottom absolute bottom-0 right-0 top-0 w-min h-full z-0 opacity-30 sm:opacity-100"
		/>
	</main>
</GridCard>
