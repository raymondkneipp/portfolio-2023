---
import GridCard from './GridCard.astro';
import Logo from './Logo.astro';

type Route = {
	name: string;
	href: string;
};

const routes: Route[] = [
	{
		name: 'Home',
		href: '/',
	},
	{
		name: 'Blog',
		href: '/blog',
	},
	{
		name: 'Contact',
		href: '/contact',
	},
];
---

<GridCard>
	<nav class="flex items-center justify-between">
		<Logo />

		<ul class="flex items-center gap-3 sm:gap-6 md:gap-12">
			{
				routes.map((route) => (
					<li>
						<a href={route.href}>{route.name}</a>
					</li>
				))
			}
		</ul>
	</nav>
</GridCard>
