---
import Icon from 'astro-icon'
import GridCard from './GridCard.astro'

type SocialItem = {
	href: string
	icon: string
	name: string
}

const socials: SocialItem[] = [
	{
		href: 'https://github.com/raymondkneipp',
		icon: 'github',
		name: 'GitHub',
	},
	{
		href: 'https://www.linkedin.com/in/raymondkneipp/',
		icon: 'linkedin',
		name: 'LinkedIn',
	},
	{
		href: 'https://twitter.com/rfkquery',
		icon: 'twitter',
		name: 'Twitter',
	},
	{
		href: 'mailto:hello@raymondkneipp.com',
		icon: 'envelope',
		name: 'Email',
	},
	{
		href: '/raymond-kneipp-resume.pdf',
		icon: 'file-pdf-box',
		name: 'Resume',
	},
]
---

<GridCard padding={false}>
	<div class="flex items-center">
		{
			socials.map((item) => (
				<a
					target="_blank"
					rel="noopener noreferrer"
					href={item.href}
					class="relative group p-3 sm:p-6 md:px-6 md:py-12 border-stone-800 border-r last-of-type:border-r-0 hover:text-amber-400 focus-visible:text-amber-400 transition flex-1 flex items-center justify-center focus-visible:ring-0 text-stone-100"
					aria-label={item.name}
				>
					<div class="absolute bg-amber-400 h-px w-full top-0 left-0 group-hover:scale-x-125 transition group-focus-visible:scale-x-125 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100" />

					<div class="absolute bg-amber-400 h-px w-full bottom-0 left-0 group-hover:scale-x-125 transition group-focus-visible:scale-x-125 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100" />

					<div class="absolute bg-amber-400 w-px h-full bottom-0 left-0 group-hover:scale-y-125 transition group-focus-visible:scale-y-125 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100" />

					<div class="absolute bg-amber-400 w-px h-full bottom-0 right-0 group-hover:scale-y-125 transition group-focus-visible:scale-y-125 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100" />

					<Icon
						pack="mdi"
						name={item.icon}
						class="h-6 w-6 sm:h-7 sm:w-7 md:w-8 md:h-8"
					/>
					<span class="ml-3 hidden lg:block">{item.name}</span>
				</a>
			))
		}
	</div>
</GridCard>
