---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import '@fontsource/jost';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}

	body {
		@apply font-bold bg-stone-900 text-stone-100 font-sans;
	}

	h1 {
		@apply font-bold text-2xl sm:text-4xl lg:text-5xl;
	}

	h2 {
		@apply font-bold text-xl sm:text-3xl font-sans;
	}

	h3 {
		@apply font-bold text-lg sm:text-xl font-sans;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		@apply text-stone-100;
	}

	p {
		@apply text-stone-400 max-w-screen-md;
	}

	ul {
		@apply list-inside list-disc flex gap-3 flex-col text-stone-400;
	}

	a {
		@apply focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-amber-400 text-amber-400;
	}

	/* Custom Scrollbar */
	::-webkit-scrollbar {
		@apply w-2;
	}

	/* Track */
	::-webkit-scrollbar-track {
		@apply bg-stone-900;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		@apply bg-amber-400;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		@apply bg-amber-300;
	}
</style>
